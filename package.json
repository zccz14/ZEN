{
  "name": "zengen",
  "version": "0.1.33",
  "description": "ZEN - A minimalist Markdown documentation site builder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "zengen": "dist/cli.js"
  },
  "scripts": {
    "build": "npx rimraf dist && tsc",
    "dev": "ts-node src/cli.ts",
    "test": "npm run build && node --test dist/**/*.test.js",
    "test:types": "tsc --noEmit",
    "test:build": "npm run build && test -f dist/index.js && test -f dist/cli.js",
    "test:cli": "node -e \"const pkg = require('./package.json'); console.log('Package:', pkg.name, 'v' + pkg.version)\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "markdown",
    "static-site",
    "documentation",
    "cli"
  ],
  "author": "ZEN Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zccz14/ZEN.git"
  },
  "bugs": {
    "url": "https://github.com/zccz14/ZEN/issues"
  },
  "homepage": "https://github.com/zccz14/ZEN#readme",
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/yaml": "^1.9.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "clipanion": "^4.0.0-rc.4",
    "express": "^4.21.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "minimatch": "^10.1.1",
    "yaml": "^1.10.2"
  }
}
